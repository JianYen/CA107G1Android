<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelRoom.Activity_HotelOrderPage">

    <ImageView
        android:id="@+id/selectedRoomType"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="29dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="選擇寵物"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkinPicker"
        app:layout_constraintEnd_toStartOf="@+id/petSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedRoomType" />

    <Spinner
        android:id="@+id/petSpinner"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Button
        android:id="@+id/checkinPicker"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:gravity="center"
        android:onClick="chooseCheckinDay"
        android:text="入住日期"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/showCheckin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/checkoutPicker"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:onClick="chooseCheckoutDay"
        android:text="退房日期"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/showCheckout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkinPicker" />


    <TextView
        android:id="@+id/showCheckin"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkinPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkinPicker"
        app:layout_constraintTop_toTopOf="@+id/checkinPicker"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/showCheckout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkoutPicker"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sendAddress"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="104dp"
        android:hint="需要送回請填地址"
        app:layout_constraintBottom_toTopOf="@+id/insertRoomOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showCheckout"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/insertRoomOrder"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:onClick="insertOrder"
        android:text="下訂單"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>