<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRegister">


    <EditText
        android:id="@+id/registUser"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="14dp"
        android:gravity="left"
        android:hint="請輸入帳號"
        app:layout_constraintBottom_toTopOf="@+id/registPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/registPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:gravity="left"
        android:hint="請輸入密碼"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/checkPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registUser" />


    <EditText
        android:id="@+id/checkPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="left"
        android:inputType="textPassword"
        android:hint="請再次確認密碼"
        app:layout_constraintBottom_toTopOf="@+id/registName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registPassword" />


    <EditText
        android:id="@+id/registName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="left"
        android:hint="請輸入姓名"
        app:layout_constraintBottom_toTopOf="@+id/registEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkPassword" />

    <EditText
        android:id="@+id/registEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:gravity="left"
        android:hint="請輸入電子信箱"
        app:layout_constraintBottom_toTopOf="@+id/registPostnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registName" />

    <EditText
        android:id="@+id/registPostnum"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:hint="請輸入郵遞區號"
        app:layout_constraintBottom_toTopOf="@+id/registAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registEmail" />

    <EditText
        android:id="@+id/registAddress"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:gravity="left"
        android:hint="請輸入地址"
        app:layout_constraintBottom_toTopOf="@+id/registPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registPostnum" />

    <EditText
        android:id="@+id/registPhone"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:gravity="left"
        android:hint="請輸入電話"
        app:layout_constraintBottom_toTopOf="@+id/radioGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registAddress" />

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registPhone">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="onSubmitClick"
        android:text="送出"
        app:layout_constraintBottom_toTopOf="@+id/registTexView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/radioGender" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:text="取消"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGender" />

    <TextView
        android:id="@+id/registTexView"
        android:layout_width="250dp"
        android:layout_height="93dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

</android.support.constraint.ConstraintLayout>