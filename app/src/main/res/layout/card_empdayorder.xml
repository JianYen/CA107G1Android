<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empDayOrderCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp"
    app:cardBackgroundColor="#BDBDBD"

    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/orderPetImage"
            android:layout_width="150dp"
            android:layout_height="150dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="2">

            <TextView
                android:id="@+id/orderMemName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="memanme"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/orderPetName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text="orderPetName"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="6dp" />

            <TextView
                android:id="@+id/orderAddress"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"

                android:layout_weight="1"
                android:gravity="center"
                android:text="orderAddress"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="86dp" />

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="orderNo"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="142dp" />
        </LinearLayout>

    </LinearLayout>


    </android.support.v7.widget.CardView>