<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pet.Activity_PetDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detailPetImg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="takePicClick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="基本資料"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/detailPetName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="寵物姓名"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/detailPetType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="寵物種類"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/detailPetBreed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="寵物品種"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/detailPetBirth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="寵物生日"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/detailPetWeight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="寵物體重"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSendCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="btnCacncelBack"
                    android:text="取消"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnSendPetInf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="送出修改"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>